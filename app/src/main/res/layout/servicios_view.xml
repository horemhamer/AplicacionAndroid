<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30sp"
    android:background="@color/white"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/servicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Títol del servei"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
           ></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="Descripció del servei"
            android:textColor="@color/black"
            android:gravity="center"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <ImageView
            android:id="@+id/imgServ"
            android:layout_width="273dp"
            android:layout_height="266dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20sp"
            android:src="@drawable/fotoservei"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgPerfilServ"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginRight="5sp">
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom del usuari"
            android:textColor="@color/black"
            android:layout_weight="1">

        </TextView>

        <Button
            android:id="@+id/btnSolicitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solicitar"
            android:backgroundTint="#FF7A22"
            >
        </Button>


    </LinearLayout>
</LinearLayout>